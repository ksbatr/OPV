 /*
#include <iostream>
#include <thread>
#include <chrono>
#include <mutex>

std::mutex cout_mutex;

void printNumbers(const std::string& threadName, int delay) {
    for (int i = 1; i <= 5; ++i) {
        {
            std::lock_guard<std::mutex> lock(cout_mutex);
            std::cout << threadName << ": " << i << std::endl;
        }
        std::this_thread::sleep_for(std::chrono::milliseconds(delay));
    }

    {
        std::lock_guard<std::mutex> lock(cout_mutex);
        std::cout << threadName << " завершился." << std::endl;
    }
}

int main() {
    setlocale(LC_ALL, "Russian");
    std::cout << "Основной поток запущен." << std::endl;

    std::thread медленный(printNumbers, "Поток 1", 500);
    std::thread быстрый(printNumbers, "Поток 2", 100);

    медленный.detach();
    быстрый.join();

    std::this_thread::sleep_for(std::chrono::seconds(3));
    std::cout << "Основной поток завершён." << std::endl;

    return 0;
}
